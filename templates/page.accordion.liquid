<style>
  .accordion {
      border: 1px solid #ddd;
      border-radius: 5px;
  }

  .accordion-item {
      border-bottom: 1px solid #ddd;
      padding: 15px;
      overflow: hidden; /* Ensures that content stays within the item during animation */
      transition: background-color 0.3s ease; /* Optional: animate background on active */
  }

  .accordion-header {
      display: flex;
      justify-content: space-between; /* Align heading, price, and arrow in one line */
      align-items: center;
      cursor: pointer;
  }

  .accordion-header h3 {
      flex-grow: 1; /* Let the title take up remaining space */
      margin: 0;
  }

  .accordion-header .price {
      font-weight: bold;
      margin-right: 10px; /* Space between price and arrow */
  }

  .accordion-header .arrow {
      font-size: 16px;
      transition: transform 0.3s ease; /* Add smooth transition for arrow rotation */
  }

  .accordion-item.active .arrow {
      transform: rotate(0deg); /* Rotate arrow to point upwards */
  }

  .accordion-text {
      margin-top: 10px;
      padding-left: 5px;
          opacity: 1; /* Keep text visible */
      transform: translateY(0); /* No translation needed */
  }

  .accordion-text p {
      font-size: 14px;
      color: #666;
      margin: 0; /* Remove default margin */
  }

  .hidden {
      display: none; /* Hide additional items by default */
  }

  .accordion-item.active .accordion-text {
      display: block;
  }
  .accordion-item.active {
      background-color: #f9f9f9; /* Change background for the active item */
  }
</style>
<div class="accordion">
  <div class="accordion-item active" onclick="toggleAccordion(this)">
    <div class="accordion-header">
      <h3>Heading 1</h3>
      <span class="price">$10</span>
      <i class="fa-solid fa-chevron-down"></i>
    </div>
    <div class="accordion-text">
      <p>This is the text under Heading 1. It contains additional information about the item.</p>
    </div>
  </div>

  <div class="accordion-item hidden" onclick="toggleAccordion(this)">
    <div class="accordion-header">
      <h3>Heading 2</h3>
      <span class="price">$20</span>
    </div>
    <div class="accordion-text">
      <p>This is the text under Heading 2. It contains additional information about the item.</p>
    </div>
  </div>

  <div class="accordion-item hidden" onclick="toggleAccordion(this)">
    <div class="accordion-header">
      <h3>Heading 3</h3>
      <span class="price">$30</span>
    </div>
    <div class="accordion-text">
      <p>This is the text under Heading 3. It contains additional information about the item.</p>
    </div>
  </div>

  <div class="accordion-item hidden" onclick="toggleAccordion(this)">
    <div class="accordion-header">
      <h3>Heading 4</h3>
      <span class="price">$40</span>
    </div>
    <div class="accordion-text">
      <p>This is the text under Heading 4. It contains additional information about the item.</p>
    </div>
  </div>
</div>

<script>
  function toggleAccordion(item) {
          const allItems = document.querySelectorAll('.accordion-item');

          // Toggle visibility for the first item's behavior
          if (item === allItems[0]) {
              const otherItems = Array.from(allItems).slice(1); // Get all items except the first one
              otherItems.forEach((otherItem) => {
                  if (otherItem.classList.contains('hidden')) {
                      otherItem.classList.remove('hidden'); // Show other items
                  } else {
                      otherItem.classList.add('hidden'); // Hide other items
                  }
              });
          }

          // Toggle active class to handle accordion opening/closing
          item.classList.toggle('active'); // Toggle the clicked item's active class
      }
</script>
