<!-- info-box-grid.liquid -->
<section class="info-box-grid-section">
  <div class="container">
    <div class="info-box-grid">
      <!-- Column 1 -->
      <div class="info-box-item">
        <h3>{{ section.settings.heading1 }}</h3>
        <p>{{ section.settings.text1 }}</p>
      </div>
      <!-- Column 2 -->
      <div class="info-box-item">
        <h3>{{ section.settings.heading2 }}</h3>
        <p>{{ section.settings.text2 }}</p>
      </div>
      <!-- Column 3 -->
      <div class="info-box-item">
        <h3>{{ section.settings.heading3 }}</h3>
        <p>{{ section.settings.text3 }}</p>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Info Box Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading1",
      "label": "Heading 1",
      "default": "Your Heading 1"
    },
    {
      "type": "textarea",
      "id": "text1",
      "label": "Text 1",
      "default": "Your text for the first column."
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading 2",
      "default": "Your Heading 2"
    },
    {
      "type": "textarea",
      "id": "text2",
      "label": "Text 2",
      "default": "Your text for the second column."
    },
    {
      "type": "text",
      "id": "heading3",
      "label": "Heading 3",
      "default": "Your Heading 3"
    },
    {
      "type": "textarea",
      "id": "text3",
      "label": "Text 3",
      "default": "Your text for the third column."
    }
  ],
  "presets": [
    {
      "name": "Info Box Grid"
    }
  ]
}
{% endschema %}
<style>
  .info-box-grid-section {
  padding: 40px 0;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

.info-box-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3 Columns */
  gap: 20px;
}

.info-box-item {
  padding: 20px;
  text-align: center;
  border-radius: 8px;
}

.info-box-item h3 {
  margin-bottom: 10px;
  font-size: 1.5rem;
}

.info-box-item p {
  font-size: 1rem;
  line-height: 1.5;
}

/* Responsive for tablets */
@media screen and (max-width: 768px) {
  .info-box-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 Columns */
  }
}

/* Responsive for mobile */
@media screen and (max-width: 480px) {
  .info-box-grid {
    grid-template-columns: 1fr; /* 1 Column */
  }
}

</style>